<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title - Solución de GeoMarketing</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min-united.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Gfk</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Proyectos<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Nuevo Proyecto</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Ciudades<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a id="menuMonterrey" href="#">Monterrey</a></li>
                            <li><a id="menuGuadalajara" href="#">Guadalajara</a></li>
                            <li><a id="menuCiudadMexico" href="#">DF y Área Metropolitana</a></li>
                            <li class="divider"></li>
                            <li><a id="menuCuliacan" href="#">Culiacán</a></li>
                            <li><a id="menuHermosillo" href="#">Hermosillo</a></li>
                            <li><a id="menuMazatlan" href="#">Mazatlán</a></li>
                            <li class="divider"></li>
                            <li><a id="menuAguascalientes" href="#">Aguascalientes</a></li>
                            <li><a id="menuCelaya" href="#">Celaya</a></li>
                            <li><a id="menuQueretaro" href="#">Querétaro</a></li>
                            <li><a id="menuLeon" href="#">León</a></li>
                            <li class="divider"></li>
                            <li><a id="menuSanLuisPotosi" href="#">San Luis Potosí</a></li>
                            <li><a id="menuCuernavaca" href="#">Cuernavaca</a></li>
                            <li><a id="menuToluca" href="#">Toluca</a></li>
                            <li><a id="menuPachuca" href="#">Pachuca</a></li>
                            <li><a id="menuCuatla" href="#">Cuatla</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GFK</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/gfkscripts")

    @RenderSection("scripts", required: false)
</body>
</html>
